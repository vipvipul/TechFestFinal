<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>Register</servlet-name>
    <servlet-class>studentdata.Register</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CalculatePoint</servlet-name>
    <servlet-class>studentdata.CalculatePoint</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginValidate</servlet-name>
    <servlet-class>studentdata.LoginValidate</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginValidate</servlet-name>
    <url-pattern>/LoginValidate</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>drivername</param-name>
    <param-value>oracle.jdbc.driver.OracleDriver</param-value>
  </context-param>
  <context-param>
    <param-name>databaseurl</param-name>
    <param-value>jdbc:oracle:thin:@localhost:1521:xe</param-value>
  </context-param>
</web-app>